CREATE DATABASE e_ticaret;

USE e_ticaret;

CREATE TABLE Musteri (
  MusteriID INT PRIMARY KEY,
  Adi VARCHAR(50),
  Soyadi VARCHAR(50),
  Eposta VARCHAR(100),
  Telefon VARCHAR(20),
  Adres VARCHAR(200),
  Sehir VARCHAR(50),
  Ilce VARCHAR(50),
  PostaKodu VARCHAR(10),
  Ulke VARCHAR(50),
  DogumTarihi DATE,
  Cinsiyet CHAR(1)
);

