CREATE TABLE Siparis (
  SiparisID INT PRIMARY KEY,
  MusteriID INT,
  Tarih DATETIME,
  Tutar DECIMAL(18,2),
  Durum VARCHAR(50),
  FOREIGN KEY (MusteriID) REFERENCES Musteri(MusteriID)
);

